<Window x:Class="BookStoreGUI.RegisterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register User" Height="320" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Register New User" 
                   FontWeight="Bold" FontSize="18" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBlock Text="Full Name:"/>
            <TextBox x:Name="txtFullName" Width="250" Margin="0,5,0,10"/>

            <TextBlock Text="Username:"/>
            <TextBox x:Name="txtUsername" Width="250" Margin="0,5,0,10"/>

            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="txtPassword" Width="250" Margin="0,5,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Register" Width="100" Margin="5" Click="Register_Click"/>
            <Button Content="Cancel" Width="100" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
