<Window x:Class="BookStoreGUI.RegisterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Account"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Width="380" Height="420"
        FontFamily="Segoe UI" FontSize="13">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Register"
               FontSize="20"
               FontWeight="SemiBold"
               Margin="0,0,0,10"/>

        <!-- Form -->
        <StackPanel Grid.Row="1">
            <!-- Full Name -->
            <TextBlock Text="Full name" Margin="0,6,0,2"/>
            <TextBox x:Name="nameTextBox" Width="260"/>

            <!-- Username -->
            <TextBlock Text="Username" Margin="0,10,0,2"/>
            <TextBox x:Name="usernameTextBox"
               Width="260"
               ToolTip="Starts with a letter, at least 6 characters, letters and digits only."/>

            <!-- Email -->
            <TextBlock Text="Email" Margin="0,10,0,2"/>
            <TextBox x:Name="emailTextBox" Width="260"/>

            <!-- Password -->
            <TextBlock Text="Password" Margin="0,10,0,2"/>
            <PasswordBox x:Name="passwordBox" Width="260"/>

            <!-- Confirm Password -->
            <TextBlock Text="Confirm password" Margin="0,10,0,2"/>
            <PasswordBox x:Name="confirmPasswordBox" Width="260"/>
        </StackPanel>

        <!-- Footer buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Cancel" Width="90" Margin="0,0,8,0" IsCancel="True" Click="Cancel_Click"/>
            <Button Content="Create account" Width="130" IsDefault="True" Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Window>
