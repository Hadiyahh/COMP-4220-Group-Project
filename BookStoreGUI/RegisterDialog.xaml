<Window x:Class="BookStoreGUI.RegisterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Account"
        Height="450"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#FFFDFDFD">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
        <Border BorderBrush="#FFB0B0B0" BorderThickness="1" CornerRadius="10" Padding="20" Margin="10">
            <StackPanel>

                <TextBlock Text="Create New Account"
                           FontWeight="Bold"
                           FontSize="20"
                           Foreground="#333"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center" />

                <!-- FULL NAME -->
                <TextBlock Text="Full Name:" FontWeight="SemiBold" />
                <TextBox x:Name="fullNameTextBox"
                         Margin="0,5,0,15"
                         Height="30"
                         FontSize="14"
                         BorderBrush="#AAA"
                         Padding="4"/>

                <!-- USERNAME -->
                <TextBlock Text="Username:" FontWeight="SemiBold" />
                <TextBox x:Name="usernameTextBox"
                         Margin="0,5,0,15"
                         Height="30"
                         FontSize="14"
                         BorderBrush="#AAA"
                         Padding="4"/>

                <!-- PASSWORD -->
                <TextBlock Text="Password:" FontWeight="SemiBold" />
                <PasswordBox x:Name="passwordBox"
                             Margin="0,5,0,15"
                             Height="30"
                             FontSize="14"
                             BorderBrush="#AAA"/>

                <!-- CONFIRM PASSWORD -->
                <TextBlock Text="Confirm Password:" FontWeight="SemiBold" />
                <PasswordBox x:Name="confirmPasswordBox"
                             Margin="0,5,0,25"
                             Height="30"
                             FontSize="14"
                             BorderBrush="#AAA"/>

                <!-- BUTTONS -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Confirm"
                            Width="100"
                            Height="32"
                            Margin="5"
                            Background="#FF008CBA"
                            Foreground="White"
                            BorderBrush="#FF008CBA"
                            FontWeight="Bold"
                            Click="Register_Click"/>

                    <Button Content="Cancel"
                            Width="90"
                            Height="32"
                            Margin="5"
                            Background="#FFCCCCCC"
                            BorderBrush="#FFCCCCCC"
                            Foreground="Black"
                            FontWeight="Bold"
                            Click="Cancel_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </ScrollViewer>
</Window>
