<Window x:Class="BookStoreGUI.AdminDashboard" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="BookStore Admin Dashboard" Height="720" Width="1180" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Simple accent for primary actions -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#CC3B3B"/>
        </Style>
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Body -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Left Nav -->
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="219*"/>
            <!-- Content -->
        </Grid.ColumnDefinitions>
        <!-- Header -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="4" LastChildFill="False" Background="#F3F4F6" >
            <TextBlock Text="BookStore Admin Dashboard" Margin="12,0" VerticalAlignment="Center" Style="{StaticResource HeaderText}"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,12,0">
                <TextBlock x:Name="TxtCurrentUser" Text="Admin: (username)" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <Button x:Name="BtnLogout" Content="Logout" Click="BtnLogout_Click" ToolTip="Sign out and return to Login" />
            </StackPanel>
        </DockPanel>
        <!-- Left Nav -->
        <StackPanel Grid.Row="1" Grid.Column="0" Background="#EEEEEE">
            <TextBlock Text="Navigation" FontWeight="Bold" Margin="12,12,12,8"/>
            <Button x:Name="NavInventory" Content="Inventory" Click="NavInventory_Click" Margin="12,6" Padding="8"/>
            <Button x:Name="NavCategories" Content="Categories" Click="NavCategories_Click" Margin="12,6" Padding="8"/>
            <Button x:Name="NavOffers" Content="Offers" Click="NavOffers_Click" Margin="12,6" Padding="8"/>
            <Button x:Name="NavOrders" Content="Orders" Click="NavOrders_Click" Margin="12,6" Padding="8"/>
        </StackPanel>
        <!-- Content Host -->
        <ContentControl x:Name="ContentHost" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" />
    </Grid>
</Window>