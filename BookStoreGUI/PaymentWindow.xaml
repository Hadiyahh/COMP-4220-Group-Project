<Window x:Class="BookStoreGUI.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payment" Height="420" Width="350" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
                
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Payment Form"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20" />

        <!-- Cardholder Name -->
        <TextBlock Text="Cardholder Name:" Grid.Row="1"/>
        <TextBox x:Name="txtCardName"
                 Grid.Row="1"
                 Margin="140,0,18,10"/>

        <!-- Card Number -->
        <TextBlock Text="Card Number:" Grid.Row="2" />
        <TextBox x:Name="txtCardNumber"
                 Grid.Row="2"
                 Margin="140,0,18,10"/>

        <!-- Expiry -->
        <TextBlock Text="Expiry (MM/YY):" Grid.Row="3" />
        <TextBox x:Name="txtExpiry"
                 Grid.Row="3"
                 Margin="140,0,18,10"/>

        <!-- CVV -->
        <TextBlock Text="CVV:" Grid.Row="4" />
        <PasswordBox x:Name="txtCVV"
                     Grid.Row="4"
                     Margin="140,0,18,10"/>

        <!-- Email -->
        <TextBlock Text="Email:" Grid.Row="5" />
        <TextBox x:Name="txtEmail"
                 Grid.Row="5"
                 Margin="140,0,18,10"/>

        <!-- Pay Button -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button x:Name="btnCancel"
                    Content="Cancel"
                    Margin="0,0,20,0"
                    Height="35"
                    Width="80"
                    Click="btnCancel_Click"
                    />
            <Button x:Name="btnPay"
                    Content="Pay Now"
                    Height="35"
                    Width="100"
                    Click="btnPay_Click"/>
        </StackPanel>
    </Grid>
</Window>
