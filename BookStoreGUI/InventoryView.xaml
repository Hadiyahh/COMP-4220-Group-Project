<UserControl x:Class="BookStoreGUI.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <DataGrid x:Name="BooksGrid"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              CanUserAddRows="False"
              ItemsSource="{Binding}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN"      Binding="{Binding ISBN}" Width="120"/>
                <DataGridTextColumn Header="Name"      Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Author"    Binding="{Binding Author}" Width="220"/>
                <DataGridTextColumn Header="Price"     Binding="{Binding Price, StringFormat=C}" Width="100"/>
                <DataGridTextColumn Header="Stock Qty" Binding="{Binding InStock}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
